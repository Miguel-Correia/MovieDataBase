<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie Database</title>
    <!-- Bootstrap 5.3.2 Dark Theme Support -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom site styles -->
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        
        .navbar {
            padding: 0.5rem 0;
        }
        
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 600;
            margin-right: 2rem;
        }
        
        .navbar-brand i {
            margin-right: 0.75rem;
        }
        
        .search-form {
            max-width: 100%;
        }
        
        .search-input-group {
            position: relative;
        }
        
        .search-input-group input {
            padding: 0.625rem 50px 0.625rem 1rem;
            font-size: 1rem;
            background-color: #2b3035;
            border: 1px solid #495057;
            color: #fff;
        }
        
        .search-input-group input:focus {
            background-color: #2b3035;
            border-color: #0d6efd;
            color: #fff;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        
        .search-input-group .btn-search {
            position: absolute;
            right: 5px;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: transparent;
            color: #adb5bd;
            padding: 0.375rem 0.75rem;
        }
        
        .search-input-group .btn-search:hover {
            color: #0d6efd;
        }
        
        .user-menu {
            /* Removido margin-left */
        }
        
        .btn-login {
            color: #fff;
            text-decoration: none;
            padding: 0.375rem 0.75rem;
            border-radius: 0.375rem;
            transition: all 0.2s;
        }
        
        .btn-login:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #0d6efd;
        }
        
        main {
            flex: 1;
            padding: 2rem 0;
        }
        
        @@media (max-width: 768px) {
            .search-form {
                order: 3;
                width: 100%;
                max-width: 100%;
                margin-top: 1rem;
            }
            
            .navbar-brand {
                margin-right: 0;
                font-size: 1.2rem;
            }
            
            .user-menu {
                margin-left: auto;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-dark bg-dark border-bottom box-shadow">
            <div class="container-fluid" style="display: grid; grid-template-columns: 1fr 2fr 1fr; align-items: center; gap: 1rem;">
                <!-- Logo e Nome -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Movies" asp-action="Index" style="margin: 0;">
                    <i class="bi bi-film"></i>
                    <span>Movie Database</span>
                </a>
                
                <!-- Search Bar -->
                <form asp-action="Index" asp-controller="Movies" method="get" class="search-form d-flex" style="margin: 0;">
                    <div class="search-input-group w-100">
                        <input type="text" 
                               name="searchString" 
                               class="form-control" 
                               placeholder="Search movies..." 
                               value="@ViewData["CurrentSearch"]"
                               aria-label="Search movies">
                        <button type="submit" class="btn-search">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
                
                <!-- User Menu / Login -->
                <div class="user-menu" style="margin: 0; display: flex; justify-content: flex-end;">
                    <a href="#" class="btn-login d-flex align-items-center">
                        <i class="bi bi-person-circle" style="font-size: 1.5rem;"></i>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="container">
        @RenderBody()
    </main>
    
    <footer class="bg-dark text-white text-center py-3 border-top mt-auto">
        © 2025 Movie Database
    </footer>
    
    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Your site-wide scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>