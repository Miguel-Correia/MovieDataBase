@model IEnumerable<MovieDataBase.Models.Movies>

<h1 class="mb-4 text-light">Movie Catalog</h1>
<a asp-action="Create" class="btn btn-primary mt-4">+ Add New Movie</a>
<hr class="border-secondary" />

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var movie in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm bg-dark border-secondary">

                @if (movie.Images != null && movie.Images.Any())
                {
                    <div id="carousel-@movie.Id" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < movie.Images.Count; i++)
                            {
                                var img = movie.Images[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@Url.Action("GetImage", "Movies", new { id = img.Id })"
                                         class="d-block w-100"
                                         style="object-fit: cover; height: 300px;" />
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@movie.Id" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carousel-@movie.Id" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                }
                else
                {
                    <img src="/images/no-poster.png"
                         class="card-img-top"
                         alt="@movie.Title"
                         style="object-fit: cover; height: 300px;" />
                }

                <div class="card-body">
                    <h5 class="card-title text-light">@movie.Title</h5>
                    <p class="card-text text-secondary">Directed by: @movie.Director</p>
                    @if (movie.DateReleased.HasValue)
                    {
                        <p class="card-text">
                            <small class="text-muted">
                                Released: @movie.DateReleased.Value.ToString("yyyy-MM-dd")
                            </small>
                        </p>
                    }
                </div>

                <div class="card-footer d-flex justify-content-between bg-transparent border-secondary">
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-info text-white">Details</a>
                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-sm btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
