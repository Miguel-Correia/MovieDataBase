@model IEnumerable<MovieDataBase.Models.Movies>

<a asp-action="Create" class="btn btn-primary mt-4">+ Add New Movie</a>
<hr class="border-secondary" />

<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var movie in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm bg-dark border-secondary hover-reveal">

                @if (movie.Images != null && movie.Images.Any())
                {
                    <div id="carousel-@movie.Id" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < movie.Images.Count; i++)
                            {
                                var img = movie.Images[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@img.FullUrl"
                                         class="d-block w-100 poster-img" />
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@movie.Id" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carousel-@movie.Id" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                }
                else
                {
                    <img src="/images/no-poster.svg"
                         class="card-img-top poster-img"
                         alt="@movie.Title" />
                }

                <div class="card-body reveal-content">
                    <h5 class="card-title">
                        <a asp-action="Details" asp-route-id="@movie.Id" class="text-light" title="@movie.Title">
                            @movie.Title
                        </a>
                    </h5>
                    <p class="card-text text-secondary director-text">Directed by: @movie.Director</p>
                </div>

                <div class="card-footer reveal-content d-flex justify-content-between bg-transparent border-secondary">
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-warning" title="Edit" aria-label="Edit">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-info text-white" title="Details" aria-label="Details">
                        <i class="bi bi-info-circle-fill"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-sm btn-danger" title="Delete" aria-label="Delete">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>
